{% extends 'base.html.twig' %}

{% block title %}{{ 'title.profile'|trans }} - {{ parent() }}{% endblock %}

{% block body %}
    <div class="main-header">
        <h2 class="main-title">{{ 'title.profile'|trans }}</h2>
    </div>

    <div class="card mb-3">
        <div class="card-header d-flex justify-content-between">
            <h5><i class="fas fa-user"></i> {{ 'label.personalInformations'|trans }}</h5>
            <a href="{{ path('account_edit') }}" class="btn btn-sm btn-outline-primary text-end"><i class="fas fa-user-edit"></i> {{ 'btn.edit'|trans }}</a>
        </div>
        <div class="card-body">
            <table class="table table-sm">
                <tr>
                    <th>{{ 'enabel_user.profile.label.displayName'|trans }}</th>
                    <td>{{ app.user.displayName }}</td>
                </tr>
                {% if app.user.jobTitle is not null %}
                    <tr>
                        <th>{{ 'label.jobTitle'|trans }}</th>
                        <td>{{ app.user.jobTitle }}</td>
                    </tr>
                {% endif %}
                <tr>
                    <th>{{ 'label.email'|trans }}</th>
                    <td>{{ app.user.email }}</td>
                </tr>
                <tr>
                    <th>{{ 'label.language'|trans }}</th>
                    <td>{{ app.user.locale|language_name }}</td>
                </tr>
            </table>
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-header d-flex justify-content-between">
            <h5><i class="fas fa-id-badge"></i> {{ 'label.accountInformations'|trans }}</h5>
            {% if app.user.email ends with '@enabel.be' %}
            {% else %}
                <a href="{{ path('account_change_password') }}" class="btn btn-sm btn-outline-danger text-end">
                    <i class="fas fa-key"></i> {{ 'btn.changePassword'|trans }}
                </a>
            {% endif %}
        </div>
        <div class="card-body">
            <table class="table table-sm">
                <tr>
                    <th>{{ 'label.id'|trans }}</th>
                    <td>{{ app.user.id }}</td>
                </tr>
                <tr>
                    <th>{{ 'label.roles'|trans }}</th>
                    <td>
                        {{ component('user-role', {status: app.user.roles.0}) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ 'label.lastLoginAt'|trans }}</th>
                    <td>
                        {% if app.user.lastLoginAt is empty %}
                        {{ 'label.never'|trans }}
                        {% else %}
                        {{ app.user.lastLoginAt|format_datetime('full', 'short', locale=app.request.locale) }}
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>{{ 'label.createdAt'|trans }}</th>
                    <td>
                        {% if app.user.createdAt is empty %}
                            {{ 'label.never'|trans }}
                        {% else %}
                        {{ app.user.createdAt|format_datetime('full', 'short', locale=app.request.locale) }}
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>{{ 'label.updatedAt'|trans }}</th>
                    <td>
                        {% if app.user.updatedAt is empty %}
                            {{ 'label.never'|trans }}
                        {% else %}
                            {{ app.user.updatedAt|format_datetime('full', 'short', locale=app.request.locale) }}
                        {% endif %}
                    </td>
                </tr>
            </table>
        </div>
    </div>
{% endblock %}